{
  "name": "dot-and-box",
  "version": "0.0.5",
  "description": "draw dots and boxes and do simple step based animations",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "cp-dot-and-box": "cp ./dist/assets/index*.js docs/static/dot-and-box.js",
    "build-docs": "npm run build && npm run cp-dot-and-box && cd docs && npm install && npm run build",
    "build-editor": "npm run build && cp ./dist/assets/index*.js editor/lib/dot-and-box.js",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "devDependencies": {
    "typescript": "^5.0.2",
    "vite": "^5.0.12",
    "vitest": "^0.34.4"
  }
}
